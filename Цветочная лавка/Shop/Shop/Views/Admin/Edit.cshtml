@model Shop.Models.ProductViewModel
@{
    ViewData["Title"] = "Редактирование товаров";
}
<div class="row">
    <div class="col-md-3 my-4">
        <div class="list-group ">
            <a asp-action="GetOrders" class="list-group-item list-group-item-action">Заказы</a>
            <a asp-action="GetUsers" class="list-group-item list-group-item-action">Пользователи</a>
            <a asp-action="GetRoles" class="list-group-item list-group-item-action">Роли</a>
            <a asp-action="AddProduct" class="list-group-item list-group-item-action">Добавление товаров</a>
            <a asp-action="GetProducts" class="list-group-item list-group-item-action">Список товаров</a>
        </div>
    </div>
    <div class="col-md-9 my-4">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <h4>Редактирование товара</h4>
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="Edit">
                            <div asp-validation-summary="All" class="text-danger offset-4 col-8"></div>
                            <div class="form-group row">
                                <div class="col-4">
                                    <label asp-for="Name">Название</label>
                                </div>
                                <div class="col-8">
                                    <input type="text" asp-for="Name" class="form-control" required>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-4">
                                    <label asp-for="Price">Цена</label>
                                </div>
                                <div class="col-8">
                                    <input asp-for="Price" class="form-control" required>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-4">
                                    <label asp-for="Description">Описание</label>
                                </div>
                                <div class="col-8">
                                    <textarea asp-for="Description" class="form-control" rows="3" required></textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-4">
                                    <label asp-for="File">Загрузить изображение</label>
                                </div>
                                <div class="col-8">
                                    <input type="file" asp-for="File" class="form-control-file" required>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="offset-4 col-8 text-right">
                                    <button name="submit" type="submit" class="btn btn-info">Сохранить</button>
                                </div>
                            </div>
                        </form>
                        <a class="text-info" asp-action="GetProducts" asp-route-id="@Model.Id"><i class="bi bi-arrow-left mr-2 text-info"></i>Назад</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>