
<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
        
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="~/images/brand.png" width="30" height="30" class="d-inline-block align-top" alt="">
                    <span style="color:#008000"><b><i>Цветочная лавка</i></b></span>
                </a>
            
            <a class="navbar-brand" asp-controller="Home" asp-action="Index"><i>Главная</i></a>
            <a class="navbar-brand" asp-controller="Home" asp-action="About"><i>О магазине</i></a>
            <a class="navbar-brand" asp-controller="Home" asp-action="Contacts"><i>Контакты</i></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    @if (User.IsInRole("Admin"))
                    {
        <li class="nav-item">
            <a class="nav-link" asp-controller="Admin" asp-action="GetOrders" role="button" aria-haspopup="true" aria-expanded="false">
                <i>Панель управления</i>
            </a>
        </li>
}
                    @if (!User.Identity.IsAuthenticated)
                    {
        <li class="nav-item">
            <form method="get" class="form-inline my-2 my-lg-0">
                <button class="btn btn-dark" type="submit" asp-controller="Account" asp-action="Login">
                    <i>Вход</i>
                    <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor" class="bi bi-box-arrow-in-right" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M6 3.5a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-2a.5.5 0 0 0-1 0v2A1.5 1.5 0 0 0 6.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-8A1.5 1.5 0 0 0 5 3.5v2a.5.5 0 0 0 1 0v-2z" />
                        <path fill-rule="evenodd" d="M11.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H1.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z" />
                    </svg>
                </button>
            </form>
        </li>
 }
    else
    {
        <li class="nav-item dropdown">
            <a style="color:white" class="nav-link dropdown-toggle btn btn-dark" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                @User.Identity.Name
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a class="dropdown-item">
                    <form method="get" asp-controller="UserProfile" asp-action="Index">
                        <input type="submit" value="Личный кабинет" style="background:none;border:none;padding:0">
                    </form>
                </a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item">
                    <form method="post" asp-controller="Account" asp-action="Logout">
                        <input type="submit" value="Выход" style="background:none;border:none;padding:0">
                    </form>
                </a>
            </div>
        </li>
}
                    <li class="nav-item">
                        <form method="get" class="form-inline my-2 my-lg-0">
                            <button class="btn btn-dark" type="submit" asp-controller="Cart" asp-action="Index">
                                <i>Корзина</i>
                                <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-cart2" viewBox="0 0 20 19">
                                    <path d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5zM3.14 5l1.25 5h8.22l1.25-5H3.14zM5 13a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0zm9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0z" />
                                </svg>
                                <span class="visually-hidden"><strong>@await Component.InvokeAsync("Cart", User.Identity.Name)</strong></span>
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>